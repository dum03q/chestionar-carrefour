  <script>
    const form = document.getElementById('carrefourForm');
    const thankYou = document.getElementById('thank-you');

    form.addEventListener('submit', function(e) {
      e.preventDefault();

      // Poți adăuga aici trimiterea datelor la server dacă vrei (fetch/ajax)

      form.style.display = 'none';
      thankYou.style.display = 'block';

      // Timer de 6 secunde după care pagina se închide automat
      setTimeout(() => {
        // Dacă e pe telefon, va încerca să închidă tab-ul, dacă nu, doar face redirect la blank
        if (navigator.userAgent.match(/Android|iPhone|iPad|iPod/i)) {
          window.close(); // funcționează în browsere care permit închiderea tab-ului deschis de script
        } else {
          // Desktop fallback - redirecționează undeva sau blochează închidere
          window.open('', '_self').close();
          // Dacă nu merge închiderea, măcar îi zici să închidă manual
          alert('Poți închide această filă acum.');
        }
      }, 6000);
    });
  </script>
